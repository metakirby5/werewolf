.tab-bar
  margin-bottom: 20px

.notifs
  position: fixed
  bottom: 0
  margin-bottom: 20px

  & > .alert
    margin-bottom: 10px
    for ngState in 'ng-enter' 'ng-leave'
      &.{ngState}
        transition: 0.5s ease all
    // TODO: figre out how to smoothly animate remove from DOM
    &.ng-enter, &.ng-leave.ng-leave-active
      opacity: 0
    &.ng-leave, &.ng-enter.ng-enter-active
      opacity: 1
    & > .msg
      margin-right: 10px